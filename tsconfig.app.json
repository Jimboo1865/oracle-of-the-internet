{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    "jsx": "react-jsx",

    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "isolatedModules": true,
    "noEmit": true,

    "skipLibCheck": true,
    "strict": true,

    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src"]
}
